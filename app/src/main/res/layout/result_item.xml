<!--        app:layout_constraintStart_toEndOf="@id/checkBoxUrgent"-->
<!--        app:layout_constraintTop_toTopOf="@id/checkBoxUrgent" />-->

    <TextView
        android:id="@+id/quantity_and_service"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="1 x 150 Blanket Drycleaning"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxUrgent"
        app:layout_constraintStart_toEndOf="@id/checkBoxUrgent"
        app:layout_constraintTop_toTopOf="@id/checkBoxUrgent" />


    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blanket Drycleaning"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/checkBoxUrgent"
        app:layout_constraintTop_toBottomOf="@id/quantity_and_service" />

    <TextView
        android:id="@+id/deliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery time: 11:00"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/service"
        app:layout_constraintTop_toBottomOf="@+id/service" />

    <TextView
        android:id="@+id/actual_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹138.0"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/discount_price"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹138.0"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


